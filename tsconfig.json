{
  /** @see https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping */
  "exclude": ["tests/fixtures"],
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "Node16",
    "moduleResolution": "Node16",
