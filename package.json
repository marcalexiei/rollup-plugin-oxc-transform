{
  "name": "rollup-plugin-oxc-transform",
  "version": "0.1.0",
  "description": "Transpile JavaScript/TypeScript code with oxc",
  "engines": {
    "node": "^18 || ^20 || ^22"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "require": "./dist/index.cjs",
    "default": "./dist/index.js"
  },
  "homepage": "https://github.com/marcalexiei/rollup-plugin-oxc-transform/",
  "bugs": {
    "url": "https://github.com/marcalexiei/rollup-plugin-oxc-transform/issues"
  },
  "keywords": [
    "rollup",
    "plugin",
    "oxc",
    "npm",
    "modules"
  ],
  "files": [
    "dist"
  ],
  "author": "Marco Pasqualetti @marcalexiei",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcalexiei/rollup-plugin-oxc-transform.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "ava"
  },
  "peerDependencies": {
    "oxc-resolver": "^2.0.0",
    "oxc-transform": "^0.30.5",
    "rollup": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "rollup": {
      "optional": true
    }
  },
  "dependencies": {
    "@rollup/pluginutils": "^5.1.3"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "12.1.1",
    "@types/node": "20.16.10",
    "ava": "6.1.3",
    "oxc-resolver": "2.0.0",
    "oxc-transform": "0.33.0",
    "rollup": "4.24.0",
    "tsimp": "2.0.12",
    "typescript": "5.6.3"
  },
  "packageManager": "pnpm@9.12.2+sha512.22721b3a11f81661ae1ec68ce1a7b879425a1ca5b991c975b074ac220b187ce56c708fe5db69f4c962c989452eee76c82877f4ee80f474cebd61ee13461b6228",
  "ava": {
    "files": [
      "./tests/*.spec.ts",
      "!./tests/types.spec.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--import=tsimp"
    ],
    "snapshotDir": "./tests/__snapshots/"
  }
}
