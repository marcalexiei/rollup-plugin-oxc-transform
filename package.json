{
  "name": "rollup-plugin-oxc-transform",
  "version": "0.0.3",
  "description": "Rollup plugin used to transpile JavaScript/TypeScript code with oxc",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^18 || ^20 || ^22"
  },
  "module": "./dist/index.mjs",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.mjs",
    "default": "./dist/index.cjs"
  },
  "homepage": "https://github.com/marcalexiei/rollup-plugin-oxc-transform/",
  "bugs": {
    "url": "https://github.com/marcalexiei/rollup-plugin-oxc-transform/issues"
  },
  "keywords": [
    "rollup",
    "plugin",
    "oxc",
    "npm",
    "modules"
  ],
  "files": [
    "dist"
  ],
  "author": "Marco Pasqualetti @marcalexiei",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcalexiei/rollup-plugin-oxc-transform.git"
  },
  "scripts": {
    "build": "rollup -c",
    "typecheck": "tsc --noEmit",
    "test": "ava",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint -- --fix",
    "release": "pnpm run build && changeset publish",
    "check-all": "pnpm run \"/^(lint|format|test|typecheck|build)$/\""
  },
  "peerDependencies": {
    "oxc-resolver": "^2.0.0",
    "oxc-transform": "^0.30.5",
    "rollup": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "rollup": {
      "optional": true
    }
  },
  "dependencies": {
    "@rollup/pluginutils": "^5.1.3"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.9",
    "@eslint/js": "9.13.0",
    "@marcalexiei/prettier-config": "1.0.4",
    "@rollup/plugin-typescript": "12.1.1",
    "@types/eslint__js": "8.42.3",
    "@types/node": "20.16.10",
    "ava": "6.1.3",
    "eslint": "9.13.0",
    "oxc-resolver": "2.0.0",
    "oxc-transform": "0.33.0",
    "prettier": "3.3.3",
    "rollup": "4.24.0",
    "tsimp": "2.0.12",
    "tslib": "2.8.0",
    "typescript": "5.6.3",
    "typescript-eslint": "8.11.0"
  },
  "packageManager": "pnpm@9.12.2+sha512.22721b3a11f81661ae1ec68ce1a7b879425a1ca5b991c975b074ac220b187ce56c708fe5db69f4c962c989452eee76c82877f4ee80f474cebd61ee13461b6228",
  "prettier": "@marcalexiei/prettier-config",
  "ava": {
    "files": [
      "./tests/*.spec.ts",
      "!./tests/types.spec.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--import=tsimp"
    ],
    "snapshotDir": "./tests/__snapshots/"
  }
}
