{
  "name": "rollup-plugin-oxc-transform",
  "version": "0.1.0",
  "description": "Rollup plugin used to transpile JavaScript/TypeScript code with oxc",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^18 || ^20 || ^22"
  },
  "module": "./dist/index.mjs",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.mjs",
    "default": "./dist/index.cjs"
  },
  "homepage": "https://github.com/marcalexiei/rollup-plugin-oxc-transform/",
  "bugs": {
    "url": "https://github.com/marcalexiei/rollup-plugin-oxc-transform/issues"
  },
  "keywords": [
    "rollup",
    "plugin",
    "oxc",
    "npm",
    "modules"
  ],
  "files": [
    "dist"
  ],
  "author": "Marco Pasqualetti @marcalexiei",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcalexiei/rollup-plugin-oxc-transform.git"
  },
  "scripts": {
    "prepare": "husky",
    "build": "rollup -c",
    "typecheck": "tsc --noEmit",
    "test": "ava",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint -- --fix",
    "release": "pnpm run build && changeset publish",
    "check-all": "pnpm run \"/^(lint|format|test|typecheck|build)$/\""
  },
  "peerDependencies": {
    "oxc-resolver": "^2.0.0",
    "oxc-transform": "^0.30.5",
    "rollup": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "rollup": {
      "optional": true
    }
  },
  "dependencies": {
    "@rollup/pluginutils": "^5.1.3"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.9",
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@eslint/js": "9.14.0",
    "@marcalexiei/prettier-config": "1.0.4",
    "@rollup/plugin-typescript": "12.1.1",
    "@types/eslint__js": "8.42.3",
    "@types/node": "22.9.0",
    "ava": "6.2.0",
    "eslint": "9.14.0",
    "husky": "9.1.6",
    "oxc-resolver": "2.0.1",
    "oxc-transform": "0.35.0",
    "prettier": "3.3.3",
    "rollup": "4.25.0",
    "tsimp": "2.0.12",
    "tslib": "2.8.1",
    "typescript": "5.6.3",
    "typescript-eslint": "8.13.0"
  },
  "packageManager": "pnpm@9.12.3+sha512.cce0f9de9c5a7c95bef944169cc5dfe8741abfb145078c0d508b868056848a87c81e626246cb60967cbd7fd29a6c062ef73ff840d96b3c86c40ac92cf4a813ee",
  "prettier": "@marcalexiei/prettier-config",
  "ava": {
    "files": [
      "./tests/*.spec.ts",
      "!./tests/types.spec.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--import=tsimp"
    ],
    "snapshotDir": "./tests/__snapshots/"
  }
}
